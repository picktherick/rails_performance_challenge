default: &default
  adapter: mysql2
  encoding: utf8mb4
  collation: utf8mb4_unicode_ci
  pool: 5
  username: root
  password:
  host: localhost

development:
  <<: *default
  database: performance_challenge_development

test:
  <<: *default
  database: performance_challenge_test

production:
  <<: *default
  database: performance_challenge_production
  username: <%= ENV['DATABASE_USERNAME'] %>
  password: <%= ENV['DATABASE_PASSWORD'] %>
  host: <%= ENV['DATABASE_HOST'] %>
